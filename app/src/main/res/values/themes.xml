<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Picture_of_the_day" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/blue</item>
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green_light</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/green_light</item>
        <item name="colorPrimarySurface">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/green_light</item>
        <item name="colorOnError">@color/red</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyTextInput</item>
    </style>

    <style name="MyTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="counterTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
    </style>


    <style name="CosmosStyle"  parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/pink_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="bottomSheetStyle">@style/bottom_sheet_style</item>
    </style>

    <style name="MoonStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/old</item>
        <item name="colorPrimary">@color/old_new</item>
        <item name="colorPrimaryDark">@color/old_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorSurface">?attr/colorPrimary</item>
    </style>

    <style name="MarsStyle" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/red</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/red</item>
        <item name="colorPrimarySurface">@color/red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="textInputStyle">@style/MyTextInput</item>
    </style>

    <style name="bottom_sheet_style">
        <item name="android:background">@color/bottom</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="sheet_line_style">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/bottom_line</item>
    </style>

    <style name="description_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding</item>
        <item name="android:paddingEnd">@dimen/padding</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:textColor">@color/bottom_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConstraintLayout_picture_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/padding</item>
        <item name="android:paddingEnd">@dimen/padding</item>
    </style>

    <color name="old">#FFFDE7</color>
    <color name="old_new">#FFF176</color>
    <color name="old_dark">#FFD54F</color>
    <color name="orange">#FFCA28</color>
</resources>