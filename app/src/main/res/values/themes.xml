<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Picture_of_the_day" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--  Customize your theme here.  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottom_sheet_style">
        <item name="android:background">@color/bottom</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="sheet_line_style">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/bottom_line</item>
    </style>

    <style name="description_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding</item>
        <item name="android:paddingEnd">@dimen/padding</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:textColor">@color/bottom_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConstraintLayout_picture_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/padding</item>
        <item name="android:paddingEnd">@dimen/padding</item>
    </style>

    <style name="Appy" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="themeColorPrimary">?colorPrimary</item>
    </style>


    <style name="Appy.IndigoTheme">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="colorAccent">@color/indigo_light</item>
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>
    <style name="Appy.PinkTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/pink_light</item>
        <item name="textInputStyle">@style/AppTextField</item>
    </style>

    <style name="AppTextField"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_field_background</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <color name="text_field_background">#FFF59D</color>


    <!-- тестово -->
    <style name="Appa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCoolStyle"  parent="Theme.Picture_of_the_day">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#b0003a</item>
        <item name="colorAccent">#ff6090</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
    </style>
</resources>