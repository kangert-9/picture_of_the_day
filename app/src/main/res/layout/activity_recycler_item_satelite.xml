<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moonImageView"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/satellite" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/name_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/descr"
        app:layout_constraintStart_toEndOf="@+id/moonImageView"
        app:layout_constraintTop_toTopOf="@+id/moonImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/descr_size"
        app:layout_constraintBottom_toBottomOf="@+id/moonImageView"
        app:layout_constraintStart_toEndOf="@+id/moonImageView"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/marginBottom"
        android:textSize="@dimen/name_size"
        app:layout_constraintBottom_toBottomOf="@+id/moonImageView"
        app:layout_constraintEnd_toStartOf="@id/moveItemDown"
        app:layout_constraintTop_toTopOf="@+id/moonImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moveItemUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginBottom"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_up_float"  />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moveItemDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moveItemUp"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/moonImageView"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
